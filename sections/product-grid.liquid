{% comment %}
  Product Grid Section
  Standard grid layout for products
{% endcomment %}

{{ 'homepage.css' | asset_url | stylesheet_tag }}

<section class="bestsellers section-padding">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="section-header">
        {% if section.settings.heading != blank %}
          <h2 class="heading-secondary">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="body-large">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="bestsellers__grid"
         style="--columns-desktop: {{ section.settings.columns_desktop }}; --columns-mobile: {{ section.settings.columns_mobile }};">
      {% assign collection = collections[section.settings.collection] %}
      {% assign products_limit = section.settings.products_to_show | default: 8 %}

      {% if collection %}
        {% for product in collection.products limit: products_limit %}
          {% render 'product-card', product: product %}
        {% endfor %}
      {% else %}
        {% for product in collections.all.products limit: products_limit %}
          {% render 'product-card', product: product %}
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and collection %}
      <div class="section-footer">
        <a href="{{ collection.url }}" class="btn btn-secondary btn-large">
          {{ section.settings.button_text | default: 'View All Products' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "section-product-grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bestsellers"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our most loved products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Leave empty to show products from all collections"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 24,
      "step": 4,
      "label": "Products to show",
      "default": 8
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columns (desktop)",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Columns (mobile)",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Product Grid"
    }
  ]
}
{% endschema %}
