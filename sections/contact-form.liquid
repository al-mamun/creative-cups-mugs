{% comment %}
  Contact Form & Info Section
{% endcomment %}

<section class="contact-section">
  <div class="container">
    <div class="contact-content">
      <!-- Contact Form -->
      <div class="contact-form">
        <h2 class="contact-form__title">{{ section.settings.form_title | default: 'Send us a Message' }}</h2>
        <p class="contact-form__subtitle">
          {{ section.settings.form_subtitle | default: 'Fill out the form below and our team will get back to you within 24 hours.' }}
        </p>

        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="form-success-message">
              <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <p>{{ section.settings.success_message | default: "Thank you for contacting us! We'll get back to you soon." }}</p>
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="form-error-message">
              <p>{{ form.errors | default_errors }}</p>
            </div>
          {% endif %}

          <div class="form-group">
            <label for="contact-name" class="form-label form-label--required">Name</label>
            <input
              type="text"
              id="contact-name"
              name="contact[name]"
              class="form-input"
              placeholder="Your full name"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              required
            />
          </div>

          <div class="form-group">
            <label for="contact-email" class="form-label form-label--required">Email</label>
            <input
              type="email"
              id="contact-email"
              name="contact[email]"
              class="form-input"
              placeholder="your.email@example.com"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              required
            />
          </div>

          <div class="form-group">
            <label for="contact-subject" class="form-label form-label--required">Subject</label>
            <input
              type="text"
              id="contact-subject"
              name="contact[subject]"
              class="form-input"
              placeholder="What is this regarding?"
              value="{% if form.subject %}{{ form.subject }}{% endif %}"
              required
            />
          </div>

          <div class="form-group">
            <label for="contact-message" class="form-label form-label--required">Message</label>
            <textarea
              id="contact-message"
              name="contact[body]"
              class="form-textarea"
              placeholder="Tell us more about your inquiry..."
              required
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <button type="submit" class="form-submit">Send Message</button>
        {% endform %}
      </div>

      <!-- Contact Information -->
      <div class="contact-info">
        <div>
          <h2 class="contact-info__title">{{ section.settings.info_title | default: 'Contact Information' }}</h2>
          <p class="contact-info__subtitle">
            {{ section.settings.info_subtitle | default: "Reach out to us through any of these channels. We're here to help!" }}
          </p>
        </div>

        <!-- Email Card -->
        {% if section.settings.show_email %}
          <div class="info-card">
            <div class="info-card__icon">
              <svg width="24" height="24" fill="none" stroke="currentColor">
                <rect x="2" y="4" width="20" height="16" rx="2" ry="2" stroke-width="2"/>
                <path d="M2 6l10 7 10-7" stroke-width="2"/>
              </svg>
            </div>
            <div class="info-card__content">
              <h3 class="info-card__title">Email Us</h3>
              <p class="info-card__text">
                {% if section.settings.email_1 != blank %}
                  <a href="mailto:{{ section.settings.email_1 }}" class="info-card__link">{{ section.settings.email_1 }}</a><br />
                {% endif %}
                {% if section.settings.email_2 != blank %}
                  <a href="mailto:{{ section.settings.email_2 }}" class="info-card__link">{{ section.settings.email_2 }}</a>
                {% endif %}
              </p>
            </div>
          </div>
        {% endif %}

        <!-- Phone Card -->
        {% if section.settings.show_phone %}
          <div class="info-card">
            <div class="info-card__icon">
              <svg width="24" height="24" fill="none" stroke="currentColor">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke-width="2"/>
              </svg>
            </div>
            <div class="info-card__content">
              <h3 class="info-card__title">Call Us</h3>
              <p class="info-card__text">
                <a href="tel:{{ section.settings.phone }}" class="info-card__link">{{ section.settings.phone }}</a><br />
                {{ section.settings.phone_hours }}
              </p>
            </div>
          </div>
        {% endif %}

        <!-- Address Card -->
        {% if section.settings.show_address %}
          <div class="info-card">
            <div class="info-card__icon">
              <svg width="24" height="24" fill="none" stroke="currentColor">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke-width="2"/>
                <circle cx="12" cy="10" r="3" stroke-width="2"/>
              </svg>
            </div>
            <div class="info-card__content">
              <h3 class="info-card__title">Visit Us</h3>
              <p class="info-card__text">
                {{ section.settings.address | newline_to_br }}
              </p>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
