      "default": "Mon-Fri, 9am-6pm EST"
    },
    {
      "type": "checkbox",
      "id": "show_address",
      "label": "Show Address",
      "default": true
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Design Street\nCreative District\nNew York, NY 10001\nUnited States"
    }
  ],
  "presets": [
    {
      "name": "Contact Form & Info"
    }
  ]
}
{% endschema %}
