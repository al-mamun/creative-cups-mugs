  "name": "Contact Form & Info",
  "settings": [
    {
      "type": "header",
      "content": "Form Settings"
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "Send us a Message"
    },
    {
      "type": "textarea",
      "id": "form_subtitle",
      "label": "Form Subtitle",
      "default": "Fill out the form below and our team will get back to you within 24 hours."
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thank you for contacting us! We'll get back to you soon."
    },
    {
      "type": "header",
      "content": "Contact Info"
    },
    {
      "type": "text",
      "id": "info_title",
      "label": "Info Title",
      "default": "Contact Information"
    },
    {
      "type": "textarea",
      "id": "info_subtitle",
      "label": "Info Subtitle",
      "default": "Reach out to us through any of these channels. We're here to help!"
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show Email",
      "default": true
    },
    {
      "type": "text",
      "id": "email_1",
      "label": "Email Address 1",
      "default": "hello@creativecups.com"
    },
    {
      "type": "text",
      "id": "email_2",
      "label": "Email Address 2",
      "default": "support@creativecups.com"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show Phone",
      "default": true
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+1 (555) 123-4567"
    },
    {
      "type": "text",
      "id": "phone_hours",
