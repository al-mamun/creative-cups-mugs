{% comment %}
  Product Slider Section
  Horizontal scrolling product carousel
{% endcomment %}

{{ 'homepage.css' | asset_url | stylesheet_tag }}

<section class="trending section-padding">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="section-header">
        {% if section.settings.heading != blank %}
          <h2 class="heading-secondary">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="body-large">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="trending__slider-container">
      <div class="trending__slider" id="trending-slider">
        {% assign collection = collections[section.settings.collection] %}
        {% assign products_limit = section.settings.products_to_show | default: 12 %}

        {% if collection %}
          {% for product in collection.products limit: products_limit %}
            {% render 'product-card', product: product %}
          {% endfor %}
        {% else %}
          {% for product in collections.all.products limit: products_limit %}
            {% render 'product-card', product: product %}
          {% endfor %}
        {% endif %}
      </div>

      {% if products_limit > 4 %}
        <div class="trending__nav">
          <button id="trending-prev" class="trending__nav-btn trending__nav-prev" aria-label="Previous products">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15,18 9,12 15,6" />
            </svg>
          </button>
          <button id="trending-next" class="trending__nav-btn trending__nav-next" aria-label="Next products">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,18 15,12 9,6" />
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Slider",
  "tag": "section",
  "class": "section-product-slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trending Now"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Popular picks that our customers love"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Leave empty to show products from all collections"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 20,
      "step": 2,
      "label": "Products to show",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Product Slider"
    }
  ]
}
{% endschema %}
