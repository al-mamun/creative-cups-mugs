{% comment %}
  Hero Slider Section
  Features: Multiple slides, autoplay, navigation, indicators
{% endcomment %}

{{ 'homepage.css' | asset_url | stylesheet_tag }}

<section class="hero" id="hero">
  <div class="hero__slider" id="hero-slider" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}">
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        {% if block.settings.image %}
          {% assign slide_bg = block.settings.image | img_url: '1920x' %}
        {% elsif block.settings.asset_image != blank %}
          {% assign slide_bg = block.settings.asset_image | asset_url %}
        {% else %}
          {% assign slide_bg = '' %}
        {% endif %}

        <div class="hero__slide {% if forloop.first %}active{% endif %}"
             {% if slide_bg != blank %}style="background-image: url('{{ slide_bg }}');"{% endif %}
             {{ block.shopify_attributes }}>

          <div class="hero__content">
            <div class="container">
              <div class="hero__text">
                {% if block.settings.title != blank %}
                  <h1 class="hero__title">{{ block.settings.title }}</h1>
                {% endif %}

                {% if block.settings.subtitle != blank %}
                  <p class="hero__subtitle">{{ block.settings.subtitle }}</p>
                {% endif %}

                <div class="hero__actions">
                  {% if block.settings.button_1_text != blank %}
                    <a href="{{ block.settings.button_1_link }}" class="btn btn-accent btn-large">
                      {{ block.settings.button_1_text }}
                    </a>
                  {% endif %}

                  {% if block.settings.button_2_text != blank %}
                    <a href="{{ block.settings.button_2_link }}" class="btn btn-secondary btn-large">
                      {{ block.settings.button_2_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    <!-- Slider Navigation -->
    <div class="hero__nav">
      <button class="hero__nav-btn hero__nav-prev" id="hero-prev" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6" />
        </svg>
      </button>
      <button class="hero__nav-btn hero__nav-next" id="hero-next" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6" />
        </svg>
      </button>
    </div>

    <!-- Slider Indicators -->
    <div class="hero__indicators">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <button class="hero__indicator {% if forloop.first %}active{% endif %}"
                  data-slide="{{ forloop.index0 }}"
                  aria-label="Go to slide {{ forloop.index }}"></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section-hero",
  "max_blocks": 10,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-play slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Slide duration",
      "default": 5000
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "large"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Hero Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image",
          "info": "Recommended size: 1920x1080px. Upload your own image here."
        },
        {
          "type": "text",
          "id": "asset_image",
          "label": "Asset Image Filename",
          "info": "Or enter asset filename (e.g., 'hero-1.jpg'). Will be used if no image uploaded above."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Colorful Coffee Moments"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Subheading",
          "default": "Vibrant mugs and cups that brighten every sip"
        },
        {
          "type": "text",
          "id": "button_1_text",
          "label": "Button 1 Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_1_link",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button_2_text",
          "label": "Button 2 Text",
          "default": "View Collections"
        },
        {
          "type": "url",
          "id": "button_2_link",
          "label": "Button 2 Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
