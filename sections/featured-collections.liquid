{% comment %}
  Featured Collections Section
  Displays collection grid with images and links
{% endcomment %}

{{ 'homepage.css' | asset_url | stylesheet_tag }}

<section class="collections section-padding">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="section-header">
        {% if section.settings.heading != blank %}
          <h2 class="heading-secondary">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="body-large">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="collections__grid">
      {% assign collection_limit = section.settings.collections_to_show | default: 6 %}

      {% if section.blocks.size > 0 %}
        {%- for block in section.blocks limit: collection_limit -%}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
            <div class="collection-card" {{ block.shopify_attributes }}>
              <div class="collection-card__image">
                {% if collection.image %}
                  <img src="{{ collection.image | img_url: '600x400', crop: 'center' }}"
                       alt="{{ collection.title }}"
                       loading="lazy">
                {% elsif collection.products.first and collection.products.first.featured_image %}
                  <img src="{{ collection.products.first.featured_image | img_url: '600x400', crop: 'center' }}"
                       alt="{{ collection.title }}"
                       loading="lazy">
                {% else %}
                  <div class="collection-card__placeholder" style="background: linear-gradient(135deg, #009688 0%, #00bcd4 100%); min-height: 300px; display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem; font-weight: bold;">
                    {{ collection.title | slice: 0 }}
                  </div>
                {% endif %}
                <div class="collection-card__overlay">
                  <a href="{{ collection.url }}" class="btn btn-primary">
                    Shop {{ collection.title }}
                  </a>
                </div>
              </div>
              <div class="collection-card__content">
                <h3 class="collection-card__title">
                  <a href="{{ collection.url }}">{{ collection.title }}</a>
                </h3>
                {% if collection.description != blank %}
                  <p class="collection-card__description">{{ collection.description | strip_html | truncate: 100 }}</p>
                {% endif %}
                <span class="collection-card__count">{{ collection.all_products_count }} Items</span>
              </div>
            </div>
          {% endif %}
        {%- endfor -%}
      {% else %}
        {% comment %} No blocks added - Auto-show all collections {% endcomment %}
        {% assign displayed_count = 0 %}
        {%- for collection in collections -%}
          {% comment %} Skip frontpage collection and collections without products {% endcomment %}
          {% if collection.handle != 'frontpage' and collection.all_products_count > 0 and displayed_count < collection_limit %}
            {% if collection.image %}
              <div class="collection-card">
                <div class="collection-card__image">
                  <img src="{{ collection.image | img_url: '600x400', crop: 'center' }}"
                       alt="{{ collection.title }}"
                       loading="lazy">
                  <div class="collection-card__overlay">
                    <a href="{{ collection.url }}" class="btn btn-primary">
                      Shop {{ collection.title }}
                    </a>
                  </div>
                </div>
                <div class="collection-card__content">
                  <h3 class="collection-card__title">
                    <a href="{{ collection.url }}">{{ collection.title }}</a>
                  </h3>
                  {% if collection.description != blank %}
                    <p class="collection-card__description">{{ collection.description | strip_html | truncate: 100 }}</p>
                  {% endif %}
                  <span class="collection-card__count">{{ collection.all_products_count }} Items</span>
                </div>
              </div>
              {% assign displayed_count = displayed_count | plus: 1 %}
            {% endif %}
          {% endif %}
        {%- endfor -%}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section-collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our carefully curated selection"
    },
    {
      "type": "range",
      "id": "collections_to_show",
      "min": 1,
      "max": 50,
      "step": 1,
      "label": "Number of collections to show",
      "default": 12,
      "info": "Maximum number of collections to display (applies to auto-display only)"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "üìÅ Collection",
      "settings": [
        {
          "type": "paragraph",
          "content": "Select a collection to feature. If no collections are selected, all collections will be displayed automatically."
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "max_blocks": 50,
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
