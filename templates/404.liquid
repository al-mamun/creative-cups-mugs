{% comment %}
  404 Error Page
  Displays when a page is not found
{% endcomment %}

<style>
  .error-404 {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4xl) var(--spacing-lg);
    background: linear-gradient(135deg, rgba(18, 144, 142, 0.05) 0%, rgba(179, 152, 85, 0.05) 100%);
  }

  .error-404__container {
    max-width: 600px;
    text-align: center;
  }

  .error-404__illustration {
    margin-bottom: var(--spacing-2xl);
    animation: float 3s ease-in-out infinite;
  }

  .error-404__cup {
    width: 200px;
    height: 200px;
    margin: 0 auto;
    position: relative;
  }

  .error-404__cup svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1));
  }

  .error-404__code {
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--spacing-lg);
    font-family: 'Playfair Display', serif;
  }

  .error-404__title {
    font-size: var(--font-size-3xl);
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
  }

  .error-404__description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-2xl);
    line-height: 1.6;
  }

  .error-404__actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-404__links {
    margin-top: var(--spacing-3xl);
    padding-top: var(--spacing-2xl);
    border-top: 1px solid var(--color-border);
  }

  .error-404__links-title {
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
  }

  .error-404__link-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--spacing-md);
    max-width: 500px;
    margin: 0 auto;
  }

  .error-404__link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-normal);
    font-size: var(--font-size-sm);
  }

  .error-404__link:hover {
    border-color: var(--color-primary);
    background: var(--color-background-alt);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .error-404__link svg {
    width: 20px;
    height: 20px;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @media (max-width: 768px) {
    .error-404__code {
      font-size: 6rem;
    }

    .error-404__title {
      font-size: var(--font-size-2xl);
    }

    .error-404__description {
      font-size: var(--font-size-base);
    }

    .error-404__actions {
      flex-direction: column;
    }

    .error-404__actions .btn {
      width: 100%;
    }
  }
</style>

<main class="error-404">
  <div class="error-404__container">
    <div class="error-404__illustration">
      <div class="error-404__cup">
        <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Coffee Mug -->
          <g>
            <!-- Mug Body -->
            <path d="M50 60 L50 140 Q50 160 70 160 L130 160 Q150 160 150 140 L150 60 Z" fill="#12908E" opacity="0.1" stroke="#12908E" stroke-width="3"/>
            <path d="M50 60 L50 140 Q50 160 70 160 L130 160 Q150 160 150 140 L150 60 Z" fill="none" stroke="#12908E" stroke-width="3"/>

            <!-- Mug Handle -->
            <path d="M150 80 Q170 80 170 100 Q170 120 150 120" fill="none" stroke="#12908E" stroke-width="3" stroke-linecap="round"/>

            <!-- Coffee -->
            <ellipse cx="100" cy="60" rx="50" ry="8" fill="#b39855" opacity="0.3"/>

            <!-- Steam -->
            <path d="M70 45 Q65 35 70 25" fill="none" stroke="#b39855" stroke-width="2" stroke-linecap="round" opacity="0.6">
              <animate attributeName="opacity" values="0.6;0.2;0.6" dur="2s" repeatCount="indefinite"/>
            </path>
            <path d="M100 40 Q95 30 100 20" fill="none" stroke="#b39855" stroke-width="2" stroke-linecap="round" opacity="0.6">
              <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
            </path>
            <path d="M130 45 Q135 35 130 25" fill="none" stroke="#b39855" stroke-width="2" stroke-linecap="round" opacity="0.6">
              <animate attributeName="opacity" values="0.7;0.3;0.7" dur="1.8s" repeatCount="indefinite"/>
            </path>

            <!-- Broken pieces effect -->
            <line x1="60" y1="70" x2="80" y2="50" stroke="#12908E" stroke-width="2" opacity="0.3"/>
            <line x1="140" y1="80" x2="160" y2="60" stroke="#12908E" stroke-width="2" opacity="0.3"/>
          </g>
        </svg>
      </div>
    </div>

    <div class="error-404__code">404</div>

    <h1 class="error-404__title">Oops! Page Not Found</h1>

    <p class="error-404__description">
      Looks like this page took a coffee break and never came back.
      Don't worry, we have plenty more to explore!
    </p>

    <div class="error-404__actions">
      <a href="{{ routes.root_url }}" class="btn btn-primary btn-large">
        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 8px;">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        Back to Home
      </a>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn-secondary btn-large">
        Browse Products
      </a>
    </div>

    <div class="error-404__links">
      <div class="error-404__links-title">Popular Pages</div>
      <div class="error-404__link-grid">
        <a href="{{ routes.all_products_collection_url }}" class="error-404__link">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          Shop All
        </a>

        <a href="/pages/custom-designer" class="error-404__link">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M12 19l7-7 3 3-7 7-3-3z"/>
            <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
            <path d="M2 2l7.586 7.586"/>
            <circle cx="11" cy="11" r="2"/>
          </svg>
          Designer
        </a>

        <a href="/pages/contact" class="error-404__link">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          Contact
        </a>

        <a href="/search" class="error-404__link">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
          Search
        </a>
      </div>
    </div>
  </div>
</main>
