{% comment %}
  Template: Search Results (Fixed and Styled)
  Description: Displays product search results with pagination and a clean layout
{% endcomment %}

{{ 'shop.css' | asset_url | stylesheet_tag }}

<div class="page-header search-hero">
  <div class="container">
    <h1 class="page-title">Search</h1>

    <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
      <label for="SearchQuery" class="visually-hidden">Search</label>
      <input id="SearchQuery" name="q" type="search" value="{{ search.terms | escape }}" placeholder="Search products..." aria-label="Search products">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>

    {% if search.performed and search.terms != blank %}
      <p class="search-terms-info">Showing results for “{{ search.terms }}”</p>
    {% endif %}
  </div>
</div>

<section class="section search-results-section">
  <div class="container">
    {% paginate search.results by 24 %}

      {% comment %} Show all search results, not just products {% endcomment %}
      {% if search.performed and search.results.size > 0 %}
        
        <div class="search-toolbar">
          <div class="search-count">
            <strong>{{ paginate.items_count }}</strong>
            {% if paginate.items_count == 1 %}result{% else %}results{% endif %}
            {% if search.terms != blank %} for "{{ search.terms }}"{% endif %}
          </div>
        </div>

        <div class="products-grid">
          {% for item in search.results %}
            {% if item.object_type == 'product' %}
              {% assign p = item %}
              <article class="product-card">
                <a href="{{ p.url }}" class="product-card__media">
                  {% if p.featured_image %}
                    <img src="{{ p.featured_image | img_url: '400x' }}" alt="{{ p.featured_image.alt | default: p.title | escape }}" loading="lazy">
                  {% else %}
                    <div class="product-card__placeholder">
                      {% comment %} A placeholder image or icon can go here {% endcomment %}
                      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  {% endif %}
                </a>

                <div class="product-card__content">
                  <h3 class="product-card__title">
                    <a href="{{ p.url }}">{{ p.title }}</a>
                  </h3>

                  <div class="product-card__footer">
                    <div class="product-card__price">
                      {% comment %} Display price range if variants exist, otherwise single price {% endcomment %}
                      {%- if p.price_varies -%}
                        From {{ p.price_min | money }}
                      {%- else -%}
                        {{ p.price | money }}
                      {%- endif -%}
                    </div>

                    <div class="product-card__actions">
                      <a class="btn btn-outline" href="{{ p.url }}">View</a>
                      {% form 'product', p, id: null, class: 'ajax-add-form' %}
                        <input type="hidden" name="id" value="{{ p.first_available_variant.id }}">
                        <button type="submit" class="btn btn-primary" {% unless p.available %}disabled{% endunless %}>
                          {{ p.available ? 'Add' : 'Sold Out' }}
                        </button>
                      {% endform %}
                    </div>
                  </div>
                </div>
              </article>
            {% endif %}
          {% endfor %}
        </div>
        
        {% if paginate.pages > 1 %}
          <div class="pagination-bottom-wrapper">
            <nav class="custom-pagination" aria-label="Pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="page-link prev-next">Prev</a>
              {% endif %}
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
                {% else %}
                  {% if part.title == paginate.current_page %}
                    <span class="page-link active" aria-current="page">{{ part.title }}</span>
                  {% else %}
                    <span class="page-link dots">...</span>
                  {% endif %}
                {% endif %}
              {% endfor %}
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="page-link prev-next">Next</a>
              {% endif %}
            </nav>
          </div>
        {% endif %}

      {% else %}
        {% comment %} No results or initial state message {% endcomment %}
        <div class="search-empty">
          <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          {% if search.performed %}
            <h2>No results for “{{ search.terms }}”</h2>
            <p>Try different keywords or check your spelling.</p>
          {% else %}
            <h2>Search our store</h2>
            <p>Use the search bar above to find what you're looking for.</p>
          {% endif %}
          <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">Browse All Products</a>
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</section>



<style>
/* Define CSS Variables for easy themeing (best placed in a global file) */
:root {
  --color-primary: #ffffff; /* White */
  --color-secondary: #0a0a0a; /* Dark Text */
  --color-accent: #0f7573; /* Teal/Emerald for accent */
  --color-accent-hover: #12908e;
  --color-border: rgba(0, 0, 0, 0.1);
  --color-background-light: #f8f8f8;
}

/* ------------------- Global/Utility Styles ------------------- */
.container {
  margin: 0 auto;
  padding: 0 15px;
}
.section {
  padding: 40px 0;
}
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  border: 0;
}

/* ------------------- Hero/Search Form ------------------- */
.search-hero {
  background: linear-gradient(135deg, var(--color-accent), var(--color-accent-hover));
  padding: 60px 0;
  color: var(--color-primary);
  text-align: center;
}
.page-title {
  font-size: 2.5rem;
  margin: 0 0 20px 0;
  font-weight: 700;
}
.search-terms-info {
  margin-top: 15px;
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 300;
}
.search-form {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.search-form input[type="search"] {
  max-width: 520px;
  width: 60%;
  padding: 12px 15px;
  border-radius: 6px 0 0 6px;
  border: 1px solid rgba(255, 255, 255, 0.25);
  background-color: rgba(255, 255, 255, 0.9);
  color: var(--color-secondary);
  font-size: 1rem;
  transition: border-color 0.3s;
}
.search-form input[type="search"]:focus {
  outline: none;
  background-color: var(--color-primary);
  border-color: var(--color-accent);
}
.search-form .btn-primary {
  margin-left: -1px; /* Overlap border */
  padding: 19px 30px;
  border-radius: 0 6px 6px 0;
  background-color: var(--color-accent);
  border: 1px solid var(--color-accent);
  color: var(--color-primary);
  cursor: pointer;
  transition: background-color 0.3s;
}
.search-form .btn-primary:hover {
  background-color: var(--color-accent-hover);
  border-color: var(--color-accent-hover);
}

/* ------------------- Search Results Toolbar & Pagination ------------------- */
.search-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
  padding-bottom: 10px;
  border-bottom: 1px solid var(--color-border);
}
.search-count {
  font-size: 1rem;
  color: var(--color-secondary);
}
.search-count strong {
  font-weight: 700;
  color: var(--color-accent);
}

.custom-pagination {
  display: flex;
  gap: 6px;
  align-items: center;
}
.custom-pagination .page-link {
  padding: 8px 12px;
  border-radius: 6px;
  text-decoration: none;
  color: var(--color-secondary);
  border: 1px solid var(--color-border);
  min-width: 40px;
  text-align: center;
  transition: background-color 0.2s, border-color 0.2s;
}
.custom-pagination .page-link:hover {
  background: var(--color-background-light);
  border-color: rgba(0, 0, 0, 0.2);
}
.custom-pagination .page-link.active {
  font-weight: 700;
  background: var(--color-accent);
  color: var(--color-primary);
  border-color: var(--color-accent);
}
.custom-pagination .dots {
  padding: 8px 4px;
  border: none;
}
.pagination-bottom-wrapper {
  margin-top: 40px;
  display: flex;
  justify-content: center;
}

/* ------------------- Products Grid and Card ------------------- */
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 30px;
}
.product-card {
  background: var(--color-primary);
  border: 1px solid var(--color-border);
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: box-shadow 0.3s, transform 0.3s;
}
.product-card:hover {
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}
.product-card__media {
  display: block;
  padding-top: 100%; /* 1:1 Aspect Ratio */
  position: relative;
  background: var(--color-background-light);
}
.product-card__media img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.product-card__placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--color-border);
}

.product-card__content {
  padding: 15px;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.product-card__title {
  font-size: 1.1rem;
  margin: 0 0 10px 0;
  line-height: 1.3;
}
.product-card__title a {
  color: var(--color-secondary);
  text-decoration: none;
  transition: color 0.2s;
}
.product-card__title a:hover {
  color: var(--color-accent);
}

.product-card__footer {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
  padding-top: 10px;
  border-top: 1px solid var(--color-border);
}
.product-card__price {
  font-weight: 700;
  color: var(--color-accent);
  font-size: 1.1rem;
}
.product-card__actions {
  display: flex;
  gap: 6px;
}
.product-card__actions .ajax-add-form {
  display: contents; /* Ensure the button is styled correctly */
}

/* Reusable Button Styles */
.btn {
  padding: 8px 14px;
  border-radius: 6px;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  transition: background-color 0.3s, border-color 0.3s, color 0.3s;
}
.btn-primary {
  background-color: var(--color-accent);
  border: 1px solid var(--color-accent);
  color: var(--color-primary);
}
.btn-primary:hover {
  background-color: var(--color-accent-hover);
  border-color: var(--color-accent-hover);
}
.btn-outline {
  background-color: transparent;
  border: 1px solid var(--color-border);
  color: var(--color-secondary);
}
.btn-outline:hover {
  background-color: var(--color-background-light);
  border-color: var(--color-secondary);
}

/* ------------------- Empty State ------------------- */
.search-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 20px;
  text-align: center;
  color: var(--color-secondary);
}
.search-empty svg {
  margin-bottom: 20px;
  stroke: #ccc;
}
.search-empty h2 {
  font-size: 1.8rem;
  margin: 0 0 10px 0;
}
.search-empty p {
  margin: 0 0 20px 0;
  max-width: 400px;
}

/* ------------------- Responsive Adjustments ------------------- */
@media (max-width: 768px) {
  .search-hero {
    padding: 40px 0;
  }
  .page-title {
    font-size: 2rem;
  }
  .search-form input[type="search"] {
    width: 75%;
    max-width: 400px;
  }
  .products-grid {
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 20px;
  }
  .search-toolbar {
    flex-direction: column;
    gap: 15px;
    align-items: flex-start;
  }
}
@media (max-width: 480px) {
  .products-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }
  .search-form {
    flex-wrap: wrap;
  }
  .search-form input[type="search"] {
    width: 100%;
    margin-bottom: 10px;
    border-radius: 6px;
  }
  .search-form .btn-primary {
    margin-left: 0;
    width: 100%;
    border-radius: 6px;
  }
  .product-card__footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
  }
}
</style>