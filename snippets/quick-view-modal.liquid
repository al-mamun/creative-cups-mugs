{% comment %}
  Quick View Modal Snippet
  Shows product details in a popup
{% endcomment %}

<div id="quick-view-modal" class="quick-view-modal">
  <div class="quick-view-modal__overlay"></div>
  <div class="quick-view-modal__content">
    <button class="quick-view-modal__close" id="quick-view-close">
      <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="quick-view-modal__body">
      <div class="quick-view-modal__image">
        <img id="quick-view-image" src="" alt="" loading="lazy" />
      </div>

      <div class="quick-view-modal__details">
        <div class="quick-view-modal__header">
          <div class="quick-view-modal__category" id="quick-view-category"></div>
          <h2 id="quick-view-title" class="quick-view-modal__title"></h2>
          <div class="quick-view-modal__rating-section">
            <div id="quick-view-rating" class="quick-view-modal__rating"></div>
            <span id="quick-view-reviews" class="quick-view-modal__reviews"></span>
          </div>
          <div class="quick-view-modal__pricing">
            <div id="quick-view-price" class="quick-view-modal__price"></div>
            <div id="quick-view-original-price" class="quick-view-modal__original-price"></div>
          </div>
          <div id="quick-view-availability" class="quick-view-modal__availability"></div>
        </div>

        <div class="quick-view-modal__description">
          <p id="quick-view-description"></p>
        </div>

        <div id="quick-view-features" class="quick-view-modal__features"></div>

        <div class="quick-view-modal__options">
          <div class="quick-view-modal__option">
            <label for="quick-view-quantity">Quantity:</label>
            <div class="quantity-controls">
              <button class="quantity-btn" id="quick-view-decrease">-</button>
              <input type="number" id="quick-view-quantity" value="1" min="1" readonly />
              <button class="quantity-btn" id="quick-view-increase">+</button>
            </div>
          </div>
        </div>

        <div class="quick-view-modal__actions">
          <button class="btn btn-primary btn-large" id="quick-view-add-to-cart">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" />
              <circle cx="9" cy="20" r="1" />
              <circle cx="20" cy="20" r="1" />
            </svg>
            Add to Cart
          </button>
          <a href="#" class="btn btn-secondary btn-large" id="quick-view-full-details">
            View Full Details
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
